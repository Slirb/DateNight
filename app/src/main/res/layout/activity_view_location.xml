<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/navigateButton"
        android:layout_width="109dp"
        android:layout_height="41dp"
        android:layout_column="0"
        android:layout_row="4"
        android:text="Navigate"
        app:layout_constraintLeft_toRightOf="@+id/googleBox"
        tools:layout_editor_absoluteY="130dp"
        android:layout_below="@+id/phoneEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:onClick="deleteLocation"
        android:text="Delete"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="277dp"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/googleBox"
        android:layout_alignRight="@+id/navigateButton"
        android:layout_alignEnd="@+id/navigateButton" />

    <Button
        android:id="@+id/visitedButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:onClick="visitLocation"
        android:text="Visited"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="277dp"
        android:layout_alignBaseline="@+id/deleteButton"
        android:layout_alignBottom="@+id/deleteButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_column="0"
        android:layout_row="0"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="1dp" />

    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameEditText"
        android:layout_column="0"
        android:layout_row="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Address"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="44dp" />

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addressEditText"
        android:layout_column="0"
        android:layout_row="2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Phone"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="87dp" />

    <EditText
        android:id="@+id/googleBox"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_column="0"
        android:layout_row="3"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Google Url"
        tools:layout_editor_absoluteY="130dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_below="@+id/phoneEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/navigateButton"
        android:layout_toStartOf="@+id/navigateButton" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/deleteButton"
        android:layout_centerHorizontal="true"
        android:onClick="updateLocation"
        android:text="Update" />

</RelativeLayout>